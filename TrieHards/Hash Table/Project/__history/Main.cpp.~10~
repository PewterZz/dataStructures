}

void __fastcall TForm1::YesClick(TObject *Sender)
{
	Dictionary->ListBox1->Items->Delete(index);
	hash.deleteElement(alpha[index]);
	alpha[index-1] = ""; CL1[index-1] = ""; CD1[index-1] = "";
	size -= 1;
	Close();
}
